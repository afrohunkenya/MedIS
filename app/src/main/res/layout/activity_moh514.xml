<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Moh514Activity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/moh514_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="Mother"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="-188dp">

        <LinearLayout
            android:id="@+id/moh513_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <EditText
                android:id="@+id/et_household_number"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:hint="Head of House ID"
                android:inputType="number" />

            <EditText
                android:id="@+id/m_et_individual_code"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:hint="Individual Code"
                android:inputType="number" />

            <RadioGroup
                android:id="@+id/rg_mpregnant"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pregnant" />

                <RadioButton
                    android:id="@+id/rb_mpregnant_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_mpregnant_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Counselled on Individual BirthPlan" />

            <RadioGroup
                android:id="@+id/rg_counselling"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_counsell_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_counsell_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered By Skilled Attendant" />

            <RadioGroup
                android:id="@+id/rg_skilled_attendant"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_skilled_attendant_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_skilled_attendant_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New-born visit at home within 48hrs of delivery" />

            <RadioGroup
                android:id="@+id/rg_delivery_time"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_delivery_time_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_delivery_time_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother with new-born counselled on Exclusive Breast feeding" />

            <RadioGroup
                android:id="@+id/rg_breastfeeding_counsell"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_breastfeeding_counsell_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_breastfeeding_counsell_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="Child" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women 15-49yrs provided with FP commodities by CHV" />

            <RadioGroup
                android:id="@+id/rg_fp_commodities"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_fp_commodities_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_fp_commodities_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child 0-59months participating in growth monitoring" />

            <RadioGroup
                android:id="@+id/rg_growth_monitoring"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_growth_monitoring_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_growth_monitoring_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child 6-59months with MUA(red) Severe Malnutrition" />

            <RadioGroup
                android:id="@+id/rg_child_severe_malnutrition"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_child_severe_malnutrition_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_child_severe_malnutrition_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child 6-59months with MUA(Yellow) Moderate Malnutrition" />

            <RadioGroup
                android:id="@+id/rg_child_moderate_malnutrition"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_child_moderate_malnutrition_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_child_moderate_malnutrition_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child 1-59months Dewormed" />

            <RadioGroup
                android:id="@+id/rg_dewormed"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="196dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_dewormed_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/rb_dewormed_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_msubmit"
                android:layout_width="122dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_round_corner_layout"
                android:gravity="center"
                android:text="@string/submit"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>